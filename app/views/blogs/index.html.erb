<% if @blogs %>
  <ul class="list-group">
    <% @blogs.each do |blog| %>
      <li class="list-group-item">
        <a href="<%= blog_path(blog.id) %>">
          <h3 class="list-group-item-heading"><%= blog.title %></h3>
          <% if blog.description %>
            <p class="list-group-item-text"><%= blog.description %></p>
          <% end %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<a href="<%= new_blog_path %>" class="">create new blog.</a>
