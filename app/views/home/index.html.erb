<h1>Recent Articles</h2>

<% if @recent_articles %>
  <ul class="articles">
    <% @recent_articles.each do |article| %>
      <li>
        <span class="article-date"><%= article.created_at.strftime("%Y-%m-%d") %></span>
        <%= link_to(
              article.title + " | " + article.blog.title,
              site_show_path(blog_screen_name: article.blog.screen_name, article_id: article.id),
              class: "article-title") %>
      </li>
    <% end %>
  </ul>
<% end %>
